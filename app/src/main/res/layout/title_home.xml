<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="@color/transparent"
    android:gravity="center_vertical"
    android:fitsSystemWindows="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_home_city"
        style="@style/CustomTextViewStyle03"
        android:layout_height="match_parent"
        android:drawablePadding="2dp"
        android:drawableRight="@mipmap/icon_top_add_arrow"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/white"
        android:text="成都" />


    <TextView
        android:id="@+id/tv_home_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/home_round_d"
        android:drawableLeft="@mipmap/search"
        android:drawablePadding="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon_top_icon_saomiao" />

</LinearLayout>